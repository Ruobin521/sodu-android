<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_online_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="小说名称"
            android:textColor="@color/item_rank_book_name"
            android:textSize="@dimen/list_item_book_name_size" />

        <ImageView
            android:id="@+id/item_online_img_new"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:src="@drawable/new_blue"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_online_book_name"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_online_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="2017/10/5 11:52:00"
            android:textColor="@color/item_rank_txt_other"
            android:textSize="14dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/item_rank_txt_other"
            android:text="最新:"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

        <TextView
            android:id="@+id/item_online_new_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/item_rank_txt_other"
            android:text="章节名称"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="读至:"
            android:textColor="@color/item_rank_txt_other"
            android:textSize="@dimen/list_item_sbu_title_size" />

        <TextView
            android:id="@+id/item_online_old_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="更新时间"
            android:textColor="@color/item_rank_txt_other"
            android:textSize="@dimen/list_item_sbu_title_size" />

    </LinearLayout>

</LinearLayout>
