<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="6dp"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="小说名称"
            android:textColor="@color/item_rank_book_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/list_item_book_name_size"
            />
        <LinearLayout
            android:id="@+id/rank_value_arrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="1dp"
            android:visibility="gone"
             >

            <ImageView
                android:id="@+id/rank_item_arrow_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/up"/>

            <TextView
                android:id="@+id/item_rank_value"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="—"
                android:textColor="@color/item_rank_txt_other"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/item_rank_txt_other"
            android:text="最新章节:"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

        <TextView
            android:id="@+id/item_rank_catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/item_rank_txt_other"
            android:text="章节名称"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="更新时间:"
            android:textColor="@color/item_rank_txt_other"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

        <TextView
            android:id="@+id/item_rank_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="更新时间"
            android:textColor="@color/item_rank_txt_other"
            android:textSize="@dimen/list_item_sbu_title_size"
            />

    </LinearLayout>

</LinearLayout>
