<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg">

    <RelativeLayout
        android:id="@+id/img_cover_container"
        android:layout_width="55dp"
        android:layout_height="75dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_cover" />

        <RelativeLayout
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#99007aff">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:text="在线"
                android:textColor="@color/white"
                android:gravity="center_vertical|center_horizontal"
                />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_cover_container"

        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/item_local_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="小说名称"
                android:textColor="@color/item_rank_book_name"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/item_local_img_new"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_local_book_name"
                android:scaleType="fitCenter"
                android:src="@drawable/new_blue"
                android:visibility="visible" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="最新:"
                android:textColor="@color/item_rank_txt_other"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_local_new_chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="章节名称"
                android:textColor="@color/item_rank_txt_other"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="读至:"
                android:textColor="@color/item_rank_txt_other"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_local_old_chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="章节名称"
                android:textColor="@color/item_rank_txt_other"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

